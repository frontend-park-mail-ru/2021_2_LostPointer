{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": false, // !true
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "models/*": ["src/models/*"],
      "managers/*": ["src/managers/*"],
      "views/*": ["src/views/*"],
      "assets/*": ["src/assets/*"]
    }
  },

  "include": [
    "./types/global.d.ts",
    "./src/**/*"
  ]
}
