<div class='profile-page'>
    <div class='profile-page__title'>
        {{{title}}}
    </div>
    <a id='signin-button' class='js-logout'>
        <i class='topbar-icon js-logout fa-solid fa-right-from-bracket'></i>
    </a>
    <div class='profile-page__content'>
        <form class='profile-avatar' action='#' novalidate>
            <div class='profile-avatar__block'>
                <img class='profile-avatar__img' src='{{{avatar}}}' />
            </div>
            <input
                type='file'
                name='file'
                id='file'
                accept='image/png, image/jpg, image/webp'
                class='profile-avatar__input'
            />
            <label for='file' class='profile-avatar__input-btn'>Upload file</label>

            <div class='profile-avatar__msg'></div>
        </form>
        <form class='profile-form' action='#' novalidate>
            {{#each inputs}}
                {{{this}}}
            {{/each}}
            <div class='profile-form__message-block'>
                <p class='profile-form__message'>Change password</p>
            </div>
            {{#each password_inputs}}
                {{{this}}}
            {{/each}}
            <div class='profile-form__msg form__fail_msg'></div>
            <div class='profile-form__buttons'>
                <input
                    class='profile-form__submit'
                    type='image'
                    src='/static/img/save.svg'
                />
            </div>
        </form>
        <div class='profile-form__invalidities'>
            <div class='profile__invalidities form__invalidities'></div>
            <div class='password__invalidities form__invalidities'></div>
        </div>
    </div>
</div>
