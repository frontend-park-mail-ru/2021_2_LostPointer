<div class='track-list-item'>
    <div class='track-list-item__artwork'>
        <img
            alt
            class='track-list-item__artwork__img'
            src='/static/artworks/{{album.props.artwork}}_128px.webp'
        />
    </div>
    <div class='track-list-item__name-container'>
        <div class='track-list-item__name'>{{title}}</div>
        <a href='/artist/{{artist.props.id}}'>
            <div class='track-list-item__artist'>{{artist.props.name}}</div>
        </a>
    </div>
    <div class='track-list-item__ellipsis'>
        <img alt class='track-list-item-fav' src='/static/img/favorite.svg' />
        <img
            alt
            class='track-list-item-play'
            data-id='{{id}}'
            data-title='{{title}}'
            data-artist='{{artist.props.name}}'
            data-cover='{{album.props.artwork}}'
            data-url='{{file}}'
            data-pos='{{pos}}'
            data-album='{{album.props.title}}'
            src='/static/img/play-outline.svg'
        />
    </div>
</div>
