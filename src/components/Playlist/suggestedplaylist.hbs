<a class='pl-link' href='/playlist/{{id}}'>
    <div class='suggested-playlist'>
        <img
            alt
            class='suggested-playlist-artwork'
            src='{{artwork}}'
        />
        <div class='suggested-playlist-name'>
            {{title}}
        </div>
        {{#if is_public}}
            <div class='suggested-playlist-public_icon'>
                <img src='/static/img/public.svg'/>
            </div>
        {{/if}}
    </div>
</a>
