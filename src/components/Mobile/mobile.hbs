            <div class='mobile-footer__player__track__artist'>
                The weeknd
            </div>
        </div>
        <div class='mobile-footer__player__icon'>
            <i class='fa-solid fa-play'></i>
        </div>
    </div>
    <div class='mobile-footer__menu'>
        <a href='/' class='mobile-footer__menu__item'>
            <i class='fa-solid fa-house'></i>
        </a>
        <a href='#' class='mobile-footer__menu__item'>
            <i class='fa-solid fa-compact-disc'></i>
        </a>
        <a href='#' class='mobile-footer__menu__item'>
            <i class='fa-solid fa-user'></i>
        </a>
    </div>
</div>
