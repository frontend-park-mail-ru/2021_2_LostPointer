<div class='listen-now__top-albums'>
    {{#each albums}}
        <div class='top-album'>
            <img
                class='top-album__img'
                alt
                src='/static/artworks/{{props.artwork}}_384px.webp'
            />
            <div class='top-album__description'>
                <div class='top-album__track-count'>38 Tracks</div>
                <div class='top-album__wrapper'>
                    <i class='top-album__play fa-solid fa-circle-play'></i>
                    <div class='top-album__description__title'>
                        <div class='top-album__artist'>
                            {{props.artist.name}}
                        </div>
                        <div class='top-album__title'>
                            {{props.title}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
