<div class="player">
    <img alt id="player-artwork" class="player-artwork{{#if hide_artwork}} hidden{{/if}}" {{# if recovered}}src="{{ cover }}_128px.webp{{/if}}"/>
    <div class="player-track">
        <div id="track-name" class="track-name">{{ track }}</div>
        <div id="artist-name" class="artist-name">{{ artist }}</div>
    </div>
    <div class="player-controls">
        <img alt src="/src/static/img/skip.svg" id="player-skip-left" class="player-skip-left{{# if left_disabled }} disabled{{/if}}">
        {{# if playing}}
            <img alt src="/src/static/img/pause.svg" class="player-play">
        {{ else }}
            <img alt src="/src/static/img/play.svg" class="player-play">
        {{/if}}
        <img alt src="/src/static/img/skip.svg" id="player-skip-right" class="player-skip-right{{# if right_disabled }} disabled{{/if}}">
    </div>
    <div class="player__time" id="player-time-current"> {{ current_time }} </div>
    <div class="player__seekbar" id="player-seekbar">
        <span class="seekbar-current" {{#if recovered}}style="{{ seekbarWidth }}"{{/if}}></span>
    </div>
    <div class="player__time" id="player-time-total"> {{ total_time }} </div>
    <img alt class="shuffle" src="/src/static/img/shuffle.svg">
    <img alt class="repeat" src="/src/static/img/repeat.svg">
    <div id="player-volume" class="player__seekbar player-volume">
        <span class="volume-current"></span>
    </div>
    <img alt class="mute" src="/src/static/img/volume.svg">
</div>
